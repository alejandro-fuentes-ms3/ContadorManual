                <Label
        TextColor="Black"
Text="0"
HorizontalOptions="Center"
Margin="0,24"
FontSize="Large"
FontAttributes="Bold"
        x:Name="ConteoLabel"

/>

            </Border>




            <HorizontalStackLayout
         HorizontalOptions="Center"
         Spacing="32">
